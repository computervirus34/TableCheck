
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @if (TempData["retMsg"] != null)
    {
        <h4 style="color:red;">@TempData["retMsg"]</h4>
    }
    @if (TempData["retSuccess"] != null)
    {
        <h4 style="color:green;">@TempData["retSuccess"]</h4>
    }
    
    <div class="row">
        <div class="col-md-12">
            @Html.Label("Table Names(Seperated by comma)", htmlAttributes: new { @class = "control-label" })
            @Html.Editor("tables", new { htmlAttributes = new { @class = "form-control", @required = "required" } })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Search" class="btn btn-default btn-primary" />
        </div>
    </div>
</div>
}